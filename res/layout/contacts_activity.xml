<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/title_bg"
        android:padding="2dip"
        >
        
        <ImageView 
            android:id="@+id/backup_contactsactivity"
            android:layout_alignParentLeft="true"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:src="@drawable/backup"
            android:background="@drawable/imageview_bg"
            android:clickable="true"
            />
        <TextView 
            android:layout_toRightOf="@id/backup_contactsactivity"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:gravity="center"
            android:text="@string/contact"
            android:textSize="@dimen/radiobutton_text_size"
            android:textColor="@color/layout_bg"
            />
        <FrameLayout 
            android:id="@+id/framelayout"
            android:layout_alignParentRight="true"
            android:layout_width="45dip"
            android:layout_height="45dip"
            >
        <ImageView 
            android:id="@+id/add_contactsactivity"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:src="@drawable/add"
            android:background="@drawable/imageview_bg"
            android:clickable="true"
            />
        <ImageView 
            android:id="@+id/delete_contactsactivity"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:src="@drawable/delete"
            android:background="@drawable/imageview_bg"
            android:clickable="true"
            />
        </FrameLayout>
        
        <TextView 
            android:id="@+id/RS_contactsactivity"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_toLeftOf="@id/framelayout"
            android:text="@string/rs"
            android:background="@drawable/imageview_bg"
            android:textSize="@dimen/radiobutton_text_size"
            android:textColor="@color/layout_bg"
            android:gravity="center"
            android:clickable="true"
            />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        
        
    <ListView 
        android:id="@+id/listview_contactsactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView 
            android:id="@+id/textdialog_contacts_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            />
    <from.mrw.yimessage.SideBar
            android:id="@+id/sidebar_contacts_activity"
            android:layout_width="20dip"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
		/>  
    
    
    
	</RelativeLayout>
</LinearLayout>
